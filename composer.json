{
    "name": "vantt/opentracing-php",
    "type": "library",
    "description": "OpenTracing API for PHP",
    "license": "Apache-2.0",
    "minimum-stability": "stable",
    "authors": [
        {
            "name": "Tran Toan Van",
            "email": "trantoanvan@gmail.com"
        }
    ],
    "replace": {
        "opentracing/opentracing": "~1.0.1"
    },
    "require": {
        "php": "^7.1 || ^8.0"
    },
    "require-dev": {
        "phpstan/phpstan": "^0.9.3 || ~0.12",
        "phpunit/phpunit": "^6.5.14 || ^7.0 || ^9.0",
        "squizlabs/php_codesniffer": "3.*"
    },
    "config": {
        "sort-packages": true
    },
    "autoload": {
        "psr-4": {
            "OpenTracing\\": "./src/OpenTracing/"
        },
        "files": [
            "./src/OpenTracing/Tags.php",
            "./src/OpenTracing/Formats.php"
        ]
    },
    "autoload-dev": {
        "psr-4": {
            "OpenTracing\\Tests\\": "tests/OpenTracing"
        }
    },
    "archive": {
        "exclude": [
            "docker-compose.yml",
            "runTests.sh"
        ]
    },
    "scripts": {
        "fix-lint": "phpcbf --standard=ZEND --standard=PSR2 --ignore=*/vendor/* ./",
        "lint": "phpcs --standard=ZEND --standard=PSR2 --ignore=*/vendor/* ./",
        "test": "phpunit tests",
        "static-check": "phpstan analyse"
    }
}
